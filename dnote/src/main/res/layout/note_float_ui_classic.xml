<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 1 普通视图 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/note_cv_float_classic_standard_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:alpha="0.9"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:id="@+id/note_ll_float_classic_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1px"
                android:background="@color/colorWhiteGrey"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:minHeight="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/note_tv_float_classic_small"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:src="@mipmap/note_ic_float_desc_size"
                        android:textColor="@color/colorGreyDown"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/note_tv_float_classic_close"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:src="@mipmap/note_ic_float_desc_close"
                        android:textColor="@color/colorGreyDown"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#909090" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <com.dixon.dnote.view.NoteLineEditText
                        android:id="@+id/note_net_float_classic_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:background="@null"
                        android:lineSpacingExtra="6dp"
                        android:padding="4dp"
                        android:text="我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n我是一行超长的文字\n"
                        android:textColor="#606060"
                        android:textCursorDrawable="@drawable/note_shape_et_cursor"
                        android:textSize="12sp"
                        tools:ignore="SmallSp" />

                    <com.dixon.dnote.view.TouchBackView
                        android:id="@+id/note_tbv_float_classic_resize"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end|bottom" />

                </FrameLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 2 small视图 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/note_cv_float_classic_small_layout"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:alpha="0.9"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="45dp"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="记"
                android:textColor="#303030"
                android:textSize="14sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</merge>