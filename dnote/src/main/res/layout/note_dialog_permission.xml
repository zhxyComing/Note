<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_shape_dialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/note_shape_dialog_sure"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/note_iv_permission_ok"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:src="@mipmap/note_ic_table_edit_save" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGreyDown" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        android:lineSpacingExtra="6dp"
        android:text="桌面笔记需要悬浮窗权限以开启悬浮笔记功能，点击确认前往开启。"
        android:textColor="#909090"
        android:textCursorDrawable="@drawable/note_shape_et_cursor"
        android:textSize="16sp" />

</LinearLayout>