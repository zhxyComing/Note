<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colorWhiteGrey"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/note_tv_function_app_float"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="15dp"
            android:text="悬浮笔记"
            android:textColor="@color/colorTextBlackMid"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="#FF4436"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/note_tv_function_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="删除笔记"
                android:textColor="@color/colorWhiteGrey"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/colorWhiteGrey"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/note_tv_function_app_widget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="15dp"
                android:text="桌面部件"
                android:textColor="@color/colorTextBlackMid"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>